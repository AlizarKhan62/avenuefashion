{
    "python.defaultInterpreterPath": "C:/Users/Admin/AppData/Local/Programs/Python/Python310/python.exe",
    "python.pythonPath": "C:/Users/Admin/AppData/Local/Programs/Python/Python310/python.exe",
    "files.hotExit": "off",
    "workbench.editor.restoreViewState": false,
    "window.restoreWindows": "none",
    
    // Performance optimizations for large PHP projects
    "files.watcherExclude": {
        "**/node_modules/**": true,
        "**/vendor/**": true,
        "**/images/**": true,
        "**/fonts/**": true,
        "**/font-awesome/**": true,
        "**/styles/**": true,
        "**/js/**": true,
        "**/stripe-php/**": true,
        "**/tryon_results/**": true,
        "**/.git/**": true,
        "**/DATABASE FILE/**": true
    },
    
    "search.exclude": {
        "**/node_modules": true,
        "**/vendor": true,
        "**/images": true,
        "**/fonts": true,
        "**/font-awesome": true,
        "**/stripe-php": true,
        "**/tryon_results": true,
        "**/.git": true,
        "**/DATABASE FILE": true
    },
    
    "files.exclude": {
        "**/tryon_results": true,
        "**/DATABASE FILE": true
    },
    
    // Reduce file watcher overhead
    "files.watcherInclude": [
        "**/*.php",
        "**/*.html",
        "**/*.css",
        "**/*.js"
    ],
    
    // Disable unnecessary features for better performance
    "editor.minimap.enabled": false,
    "editor.wordWrap": "off",
    "editor.folding": false,
    "editor.glyphMargin": false,
    "editor.lightbulb.enabled": "off",
    "workbench.editor.enablePreview": false,
    "workbench.editor.limit.enabled": true,
    "workbench.editor.limit.value": 5,
    "workbench.editor.limit.perEditorGroup": true,
    
    // PHP specific optimizations
    "php.validate.enable": false,
    "php.suggest.basic": false,
    
    // Git performance
    "git.enabled": false,
    "git.autorefresh": false,
    
    // Extensions performance
    "extensions.autoCheckUpdates": false,
    "extensions.autoUpdate": false,
    
    // Search performance
    "search.smartCase": false,
    "search.useGlobalIgnoreFiles": true,
    "search.useParentIgnoreFiles": true,
    
    // Terminal performance
    "terminal.integrated.rendererType": "dom"
}
